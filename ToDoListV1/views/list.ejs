<%- include("header") -%>

    <% if (kindOfDay == "Work List"){ %>
      <a href="/" class="box">back to main</a>
   <% }else{ %>
      <a href="/working" class="box">workList</a>
   <% } %>

  <h1 class = "box" id = "heading"><strong><%=dayName %></strong></h1>
  <% if( dayNum >= 4|| dayNum == 0){  %>
  <h1 style="color:red" class = "box" id = "heading"><%=kindOfDay%></h1>
  <% }else{ %>
    <h1 style="color:rgb(104, 235, 64)" class = "box" id = "heading"><%=kindOfDay%></h1>
    <%} %>   
    <h1 class="box">this page is: <%=nameOfPage%></h1>

<div class="box ">
   
          
        <% newTasks.forEach((newTask)=>{ %>
          
            <div class="item">
              <form action="/delete" class="item" method="post">
              
                <input type="checkbox" value="<%= newTask._id %>" onChange="this.form.submit()" name="listCheckBox">
                <p ><%= newTask.taskjsn %>   </p>
              </form>
            </div>
          
        
       <% }) %>
      

    
        
      
       <form action="/" method = "post" class="item ">
        <input type="text" name = "task" placeholder="enter task" autocomplete="off">
        <input type="text" name = "timelog" value="<%=dayName %>"style="display: none;">
        
        <button type="submit" name ="listButton" value="<%=kindOfDay%>">+</button>

       </form>
   
</div>

    
       
<%- include("footer") -%>      








